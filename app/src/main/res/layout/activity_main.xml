<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="50dp"
        android:textColor="@color/white"
        android:paddingEnd="50dp"
        android:text="START"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stop_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_activity_main"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:textColor="@color/white"
        android:text="STOP"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/latitude_activity_main"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop_activity_main"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Latitude"
        android:textColor="@color/dark_color1"
        android:textSize="18sp"
        app:icon="@drawable/baseline_location_on_24"
        android:layout_alignParentStart="true"
        app:iconSize="40dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/longitude_activity_main"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop_activity_main"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:text="Longitude"
        android:textColor="@color/dark_color1"
        android:textSize="18sp"
        app:icon="@drawable/baseline_location_on_24"
        app:iconSize="40dp"
        />

</RelativeLayout>